<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16"
      fx:controller="com.georgefitzpatrick.trading.crypto.ui.controller.MainController">
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab fx:id="strategiesTab">
            <fx:include source="StrategiesView.fxml"/>
        </Tab>
        <Tab fx:id="exchangesTab">
            <fx:include source="ExchangeCredentialsView.fxml"/>
        </Tab>
    </TabPane>
    <Separator/>
    <HBox alignment="CENTER_RIGHT" styleClass="accessibility-bar">
        <ComboBox fx:id="localeComboBox"/>
    </HBox>
</VBox>
