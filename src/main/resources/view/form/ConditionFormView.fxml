<?xml version="1.0" encoding="UTF-8"?>


<?import com.georgefitzpatrick.trading.crypto.ui.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/16"
          fx:controller="com.georgefitzpatrick.trading.crypto.ui.controller.form.ConditionFormController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <VBox spacing="5" GridPane.columnSpan="2">
        <HintLabel fx:id="actionLabel"/>
        <ValidatedComboBox fx:id="action" maxWidth="Infinity"/>
    </VBox>
    <VBox spacing="5" GridPane.rowIndex="1">
        <HintLabel fx:id="basePeriodLabel" styleClass="secondary-text"/>
        <ValidatedSpinner fx:id="basePeriod" editable="true"/>
    </VBox>
    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <HintLabel fx:id="baseIndicatorLabel" styleClass="secondary-text"/>
        <ValidatedComboBox fx:id="baseIndicator" maxWidth="Infinity"/>
    </VBox>
    <VBox spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <HintLabel fx:id="relationshipLabel" styleClass="secondary-text"/>
        <ValidatedComboBox fx:id="relationship" maxWidth="Infinity"/>
    </VBox>
    <VBox spacing="5" GridPane.rowIndex="3">
        <HintLabel fx:id="counterPeriodLabel" styleClass="secondary-text"/>
        <ValidatedSpinner fx:id="counterPeriod" editable="true"/>
    </VBox>
    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <HintLabel fx:id="counterIndicatorLabel" styleClass="secondary-text"/>
        <ValidatedComboBox fx:id="counterIndicator" maxWidth="Infinity"/>
    </VBox>
</GridPane>
